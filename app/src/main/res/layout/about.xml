<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#ff2da5d7"


    >


    <TextView

        android:id="@+id/aboutSmallTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Christopher speaks internationally, is a confident and mentor to leaders, coach and author of a forth-coming book."
        android:textColor="#ffffff"
        android:paddingTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/aboutimageView"
        android:layout_below="@+id/aboutBigTextView" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutimageView"
        android:src="@drawable/chris_smaller"



        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/aboutBigTextView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Christopher Evatt"
        android:id="@+id/aboutHeader"
        android:gravity="center"
        android:textColor="#ffffff"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/section_label"
        android:layout_alignEnd="@+id/section_label"
        android:paddingBottom="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Christopher Evatt, New Zealander, is at the forefront of people creating living organisations where all stakeholders are at their best and together achieve extraordinary positive outcomes.
With Christopher, people come alive.
They engage with their inspiration and creative intelligences and quantum-leap to exceptionally higher levels of well being and accomplishment.
With his deep insights and neuro-science based life-tools, people discover their purposes, use their finest capabilities, gain break-through understandings and experience enhanced well being, energy and accomplishment."
        android:id="@+id/aboutBigTextView"
        android:textColor="#ffffff"
        android:paddingTop="5dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/aboutHeader" />


</RelativeLayout>
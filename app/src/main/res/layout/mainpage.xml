<!--android:background="#2da5d7" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.MainActivity"
    tools:ignore="MergeRootFrame"
    android:layout_gravity="center"
    android:background="@color/backGroundBlue"

    android:scrollbars="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal|top"

            android:src="@drawable/icon_full_mono_v2_300px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


            <Button
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="The living organization"
                android:drawableLeft="@drawable/course_bookce_50px"
                android:textColor="#000000"
                android:id="@+id/btnLivOrg"
                android:layout_gravity="center_horizontal"

                android:onClick="startCourse1"
                android:layout_below="@+id/button4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/ButtonThemeBlue"/>

            <Button
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="StartupPLUS"
                android:textColor="#000000"
                android:id="@+id/button2"
                android:drawableLeft="@drawable/course_startup_50px"

                android:layout_gravity="center_horizontal"
                android:onClick="startCourse3"
                android:layout_below="@+id/button3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/ButtonThemeBlue"/>

            <Button
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Authentic Leading"
                android:textColor="#000000"
                android:id="@+id/button3"

                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:drawableLeft="@drawable/course_authleading_50px"
                android:onClick="startCourse4"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/ButtonThemeBlue"/>

            <Button
                android:layout_marginTop="2dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Family Businesses Succession"
                android:textColor="#000000"
                android:id="@+id/button4"

                android:drawableLeft="@drawable/course_familybs_50px"
                android:layout_gravity="center_horizontal"
                android:onClick="startCourse2"
                android:layout_below="@+id/button2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/btnLivOrg"
                android:layout_alignStart="@+id/btnLivOrg"
                style="@style/ButtonThemeBlue"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available courses:"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:clickable="false"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:drawableRight="@drawable/finalarrow_r"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" About "
        android:id="@+id/btnToAbout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:drawableLeft="@drawable/finalarrow_l"
        android:textColor="#000000"
        android:background="@android:color/transparent"

        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Help "
        android:id="@+id/btnToHelp"
        android:layout_alignTop="@+id/btnToAbout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toHelp"/>


</RelativeLayout>
